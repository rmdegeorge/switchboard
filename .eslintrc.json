{
  "env": {
    "browser": true,
    "es2020": true,
    "webextensions": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react-hooks"],
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off"
  }
}
